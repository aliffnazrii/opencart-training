<modification>
    <name>Ticket Menu</name>
    <version>1.0</version>
    <author>Your Name</author>
    <code>ticket_menu</code>
    <link>https://gambaukita.com</link>

    <!-- Add Ticket Menu to the Left Menu -->
    <file path="admin/controller/common/column_left.php">
        <operation>
            <search><![CDATA[$data['menus'][] = [
                'id'       => 'menu-extension',
                'icon'     => 'fas fa-puzzle-piece',
                'name'     => $this->language->get('text_extension'),
                'href'     => '',
                'children' => $marketplace
            ];]]></search>
            <add position="after"><![CDATA[
                // Add Ticket Menu
                $data['menus'][] = [
                    'id'       => 'menu-ticket',
                    'icon'     => 'fas fa-ticket-alt',
                    'name'     => 'Ticket',
                    'href'     => $this->url->link('extension/module/ticket', 'user_token=' . $this->session->data['user_token']),
                    'children' => []
                ];
            ]]></add>
        </operation>
    </file>
</modification>